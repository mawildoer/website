---
import Layout from '../layouts/Layout.astro';

// --- Placeholders - Replace these with your actual details ---
const YOUR_NAME = "Matt Wildoer"; // Replace with your name
const GITHUB_URL = "https://github.com/mawildoer"; // Replace with your GitHub profile URL
const LINKEDIN_URL = "https://www.linkedin.com/in/mattwildoer/"; // Replace with your LinkedIn profile URL
const EMAIL_ADDRESS = "mawildoer@gmail.com"; // Replace with your email address
// --------------------------------------------------------------
---

<Layout title={`${YOUR_NAME} - Engineer - Founder of atopile, Ex-Tesla, Ex-Lilium`}>
  <style>
    html, body {
      height: 100%;
      margin: 0;
      overflow: hidden; /* Prevent scrolling */
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"; /* System font stack */
      background-color: #ffffff; /* Plain white background */
      color: #111827; /* Dark gray text */
    }
    main {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%;
      text-align: center;
    }
    .card {
      background-color: #f9fafb; /* Very light gray card */
      padding: 2.5rem 4rem;
      border-radius: 0.5rem; /* Slightly rounded corners */
      border: 1px solid #e5e7eb; /* Light border */
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05); /* Subtle shadow */
    }
    h1 {
      margin-top: 0;
      margin-bottom: 0.5rem;
      font-size: 1.75rem; /* Slightly larger heading */
      font-weight: 600; /* Semi-bold */
    }
    p {
      margin-top: 0;
      margin-bottom: 1.5rem;
      color: #6b7280; /* Medium gray for subtitle */
      font-size: 1rem;
    }
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex; /* Arrange links horizontally */
      gap: 1.5rem; /* Space between links */
      justify-content: center;
    }
    li {
      margin: 0;
    }
    a {
      color: #3b82f6; /* Link blue */
      text-decoration: none;
      font-weight: 500; /* Medium weight */
      transition: color 0.2s ease-in-out;
    }
    a:hover {
      color: #1d4ed8; /* Darker blue on hover */
      text-decoration: underline;
    }
  </style>

  <main>
    <div class="card">
      <h1>{YOUR_NAME}</h1>
      <p>Engineer - Founder of atopile, Ex-Tesla, Ex-Lilium</p>
      <ul>
        <li><a href={GITHUB_URL} target="_blank" rel="noopener noreferrer">GitHub</a></li>
        <li><a href={LINKEDIN_URL} target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
        <li><a href={`mailto:${EMAIL_ADDRESS}`}>Email</a></li>
      </ul>
    </div>
  </main>
</Layout>
